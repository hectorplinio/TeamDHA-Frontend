{
  "semi": true,
  "singleQuote": false,
  "arrowParens": "avoid",
  "trailingComma": "es5",
  "endOfLine": "auto",
  "tabWidth": 4,
  "overrides": [
    {
      "files": "*.yml",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
